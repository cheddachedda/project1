<% fixture = Fixture.find locals[:fixture].id %>
<% home = Team.find_by(name: fixture.home) %>
<% away = Team.find_by(name: fixture.away) %>

<table class="fixture-card" id="fixture-<%= fixture.id %>">

  <% unless fixture.status == 'BYE' %>

      <thead>
        <tr>
          <th colspan="4">
            <%= fixture.date %> • <%= fixture.status %> • <%= fixture.venue %>
          </th>
        </tr>
      </thead>

      <tbody>

        <tr>
          <td><%= link_to home.name, team_path(home.id) %></td>
          <td><%= home.record %></td>
          <td><%= home.rank.ordinalize %></td>
          <td><%= fixture.home_score %></td>
        </tr>

        <tr>
          <td><%= link_to away.name, team_path(away.id) %></td>
          <td><%= away.record %></td>
          <td><%= away.rank.ordinalize %></td>
          <td><%= fixture.away_score %></td>
        </tr>

      </tbody>

      <% unless params[:round] && params[:id] %>

        <tfoot>
          <tr>
            <td colspan="4"><%= link_to '>> View Fixture' ,fixture_path(fixture.round, fixture.id) %></td>
          </tr>
        </tfoot>

      <% end %>

  <% else %>

      <thead>
        <tr>
          <th colspan="2"><%= fixture.status %></th>
        </tr>
      </thead>

      <tbody>
        <tr>
          <td><%= link_to home.name, team_path(home.id) %></td>
          <td><%= home.record %></td>
        </tr>
      </tbody>

  <% end %>

</table>
