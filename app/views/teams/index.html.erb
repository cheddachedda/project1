<h1>Teams#index</h1>
<p>Find me in app/views/teams/index.html.erb</p>

<table>

  <tr>
    <% Team.column_names.each do |col| %>
      <th><%= col %></th>
    <% end %>
    <th>G</th>
    <th>W</th>
    <th>L</th>
    <th>D</th>
    <th>F</th>
    <th>A</th>
    <th>%</th>
    <th>Pts</th>
  </tr>

  <% @teams.each do |team| %>
    <tr>
      <% Team.column_names.each do |col| %>
        <td><%= team[col] %></td>
      <% end %>
      <td><%= team.games_played %></td>
      <td><%= team.wins %></td>
      <td><%= team.losses %></td>
      <td><%= team.draws %></td>
      <td><%= team.goals_for %></td>
      <td><%= team.goals_against %></td>
      <td><%= team.goal_percentage %></td>
      <td><%= team.win_percentage %></td>
    </tr>
  <% end %>

</table>
